<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hunt.dao.SysUserMapper">
    <resultMap id="baseResultMap" type="com.hunt.model.entity.SysUser">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="login_name" property="loginName" jdbcType="VARCHAR"/>
        <result column="zh_name" property="zhName" jdbcType="VARCHAR"/>
        <result column="en_name" property="enName" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="birth" property="birth" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="password_salt" property="passwordSalt" jdbcType="VARCHAR"/>
        <result column="rank" property="rank" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
    </resultMap>
    <!--  -->
    <sql id="sql_column">
        su.id id ,
        su.login_name loginName ,
        su.zh_name zhName ,
        su.en_name enName ,
        su.sex sex ,
        su.birth birth ,
        su.email email ,
        su.phone phone ,
        su.address address ,
        su.password password ,
        su.password_salt passwordSalt ,
        su.rank rank ,
        su.create_time createTime ,
        su.update_time updateTime ,
        su.create_by createBy ,
        su.update_by updateBy ,
        su.state state
    </sql>

    <sql id="sql_column_where">
        <if test="id !=null ">
            AND su.id = #{id}
        </if>
        <if test="loginName !=null and loginName.length() != 0">
            AND su.login_name = #{loginName}
        </if>
        <if test="zhName !=null and zhName.length() != 0">
            AND su.zh_name = #{zhName}
        </if>
        <if test="enName !=null and enName.length() != 0">
            AND su.en_name = #{enName}
        </if>
        <if test="sex !=null ">
            AND su.sex = #{sex}
        </if>
        <if test="birth !=null and birth.length() != 0">
            AND su.birth = #{birth}
        </if>
        <if test="email !=null and email.length() != 0">
            AND su.email = #{email}
        </if>
        <if test="phone !=null and phone.length() != 0">
            AND su.phone = #{phone}
        </if>
        <if test="address !=null and address.length() != 0">
            AND su.address = #{address}
        </if>
        <if test="password !=null and password.length() != 0">
            AND su.password = #{password}
        </if>
        <if test="passwordSalt !=null and passwordSalt.length() != 0">
            AND su.password_salt = #{passwordSalt}
        </if>
        <if test="rank !=null ">
            AND su.rank = #{rank}
        </if>
        <if test="createTime !=null ">
            AND su.create_time = #{createTime}
        </if>
        <if test="updateTime !=null ">
            AND su.update_time = #{updateTime}
        </if>
        <if test="createBy !=null ">
            AND su.create_by = #{createBy}
        </if>
        <if test="updateBy !=null ">
            AND su.update_by = #{updateBy}
        </if>
        <if test="state !=null ">
            AND su.state = #{state}
        </if>
    </sql>

    <insert id="insertSysUser" parameterType="SysUser" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user su
        <trim prefix="(" suffix=")" suffixOverrides=",">
            su.id,
            su.login_name,
            su.zh_name,
            su.en_name,
            su.sex,
            su.birth,
            su.email,
            su.phone,
            su.address,
            su.password,
            su.password_salt,
            su.rank,
            su.create_time,
            su.update_time,
            su.create_by,
            su.update_by,
            su.state,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id !=null">
                su.id = #{id},
            </if>
            <if test="loginName !=null and loginName.length() !=0">
                su.login_name = #{loginName},
            </if>
            <if test="zhName !=null and zhName.length() !=0">
                su.zh_name = #{zhName},
            </if>
            <if test="enName !=null and enName.length() !=0">
                su.en_name = #{enName},
            </if>
            <if test="sex !=null">
                su.sex = #{sex},
            </if>
            <if test="birth !=null and birth.length() !=0">
                su.birth = #{birth},
            </if>
            <if test="email !=null and email.length() !=0">
                su.email = #{email},
            </if>
            <if test="phone !=null and phone.length() !=0">
                su.phone = #{phone},
            </if>
            <if test="address !=null and address.length() !=0">
                su.address = #{address},
            </if>
            <if test="password !=null and password.length() !=0">
                su.password = #{password},
            </if>
            <if test="passwordSalt !=null and passwordSalt.length() !=0">
                su.password_salt = #{passwordSalt},
            </if>
            <if test="rank !=null">
                su.rank = #{rank},
            </if>
            <if test="createTime !=null">
                su.create_time = #{createTime},
            </if>
            <if test="updateTime !=null">
                su.update_time = #{updateTime},
            </if>
            <if test="createBy !=null">
                su.create_by = #{createBy},
            </if>
            <if test="updateBy !=null">
                su.update_by = #{updateBy},
            </if>
            <if test="state !=null">
                su.state = #{state},
            </if>
        </trim>
    </insert>


    <update id="updateSysUser" parameterType="SysUser">
        update sys_user su
        <set>
            <if test="id !=null">
                su.id = #{id},
            </if>
            <if test="loginName !=null and loginName.length() !=0">
                su.login_name = #{loginName},
            </if>
            <if test="zhName !=null and zhName.length() !=0">
                su.zh_name = #{zhName},
            </if>
            <if test="enName !=null and enName.length() !=0">
                su.en_name = #{enName},
            </if>
            <if test="sex !=null">
                su.sex = #{sex},
            </if>
            <if test="birth !=null and birth.length() !=0">
                su.birth = #{birth},
            </if>
            <if test="email !=null and email.length() !=0">
                su.email = #{email},
            </if>
            <if test="phone !=null and phone.length() !=0">
                su.phone = #{phone},
            </if>
            <if test="address !=null and address.length() !=0">
                su.address = #{address},
            </if>
            <if test="password !=null and password.length() !=0">
                su.password = #{password},
            </if>
            <if test="passwordSalt !=null and passwordSalt.length() !=0">
                su.password_salt = #{passwordSalt},
            </if>
            <if test="rank !=null">
                su.rank = #{rank},
            </if>
            <if test="createTime !=null">
                su.create_time = #{createTime},
            </if>
            <if test="updateTime !=null">
                su.update_time = #{updateTime},
            </if>
            <if test="createBy !=null">
                su.create_by = #{createBy},
            </if>
            <if test="updateBy !=null">
                su.update_by = #{updateBy},
            </if>
            <if test="state !=null">
                su.state = #{state},
            </if>
        </set>
        where su.id =#{id} and state=1
    </update>

    <select id="selectSysUser" parameterType="SysUser" resultType="SysUser">
        select * from sys_user su where
        <where>
            <include refid="sql_column_where"/>
        </where>
    </select>

    <select id="selectSysUserById" parameterType="Long" resultType="SysUser">
        select * from sys_user su where su.id =#{id} and $meta.aliasName.state=1
    </select>

    <select id="selectSysUserAll" resultType="SysUser">
        select * from sys_user where state=1
    </select>
    <select id="selectUserByLoginName" resultType="com.hunt.model.entity.SysUser">
        SELECT *
        FROM sys_user
        WHERE state = 1 AND login_name = #{username};
    </select>

</mapper>