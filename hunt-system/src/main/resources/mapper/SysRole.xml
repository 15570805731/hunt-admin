<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hunt.dao.SysRoleMapper">
    <resultMap id="baseResultMap" type="com.hunt.model.entity.SysRole">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="rank" property="rank" jdbcType="BIGINT"/>
        <result column="is_final" property="isFinal" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="DATETIME"/>
        <result column="update_time" property="updateTime" jdbcType="DATETIME"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
    </resultMap>
    <!--  -->
    <sql id="sql_column">
        id,
        description,
        name,
        rank,
        isFinal,
        createTime,
        updateTime,
        createBy,
        updateBy,
        state
    </sql>

    <sql id="sql_column_where">
        <if test="id !=null ">
            AND id = #{id}
        </if>
        <if test="description !=null and description.length() != 0">
            AND description = #{description}
        </if>
        <if test="name !=null and name.length() != 0">
            AND name = #{name}
        </if>
        <if test="rank !=null ">
            AND rank = #{rank}
        </if>
        <if test="isFinal !=null ">
            AND is_final = #{isFinal}
        </if>
        <if test="createTime !=null ">
            AND create_time = #{createTime}
        </if>
        <if test="updateTime !=null ">
            AND update_time = #{updateTime}
        </if>
        <if test="createBy !=null ">
            AND create_by = #{createBy}
        </if>
        <if test="updateBy !=null ">
            AND update_by = #{updateBy}
        </if>
        <if test="state !=null ">
            AND state = #{state}
        </if>
    </sql>

    <insert id="insert" parameterType="SysRole" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            description,
            name,
            rank,
            is_final,
            create_time,
            update_time,
            create_by,
            update_by,
            state,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{description},
            #{name},
            #{rank},
            #{isFinal},
            #{createTime},
            #{updateTime},
            #{createBy},
            #{updateBy},
            #{state},
        </trim>
    </insert>


    <update id="update" parameterType="SysRole">
        update sys_role
        <set>
            <if test="id !=null">
                id = #{id},
            </if>
            <if test="description !=null and description.length() !=0">
                description = #{description},
            </if>
            <if test="name !=null and name.length() !=0">
                name = #{name},
            </if>
            <if test="rank !=null">
                rank = #{rank},
            </if>
            <if test="isFinal !=null">
                is_final = #{isFinal},
            </if>
            <if test="createTime !=null">
                create_time = #{createTime},
            </if>
            <if test="updateTime !=null">
                update_time = #{updateTime},
            </if>
            <if test="createBy !=null">
                create_by = #{createBy},
            </if>
            <if test="updateBy !=null">
                update_by = #{updateBy},
            </if>
            <if test="state !=null">
                state = #{state},
            </if>
        </set>
        where .id =#{id} and state=1
    </update>

    <select id="select" parameterType="SysRole" resultType="SysRole">
        select * from sys_role where
        <where>
            <include refid="sql_column_where"/>
        </where>
    </select>

    <select id="selectById" parameterType="Long" resultType="SysRole">
        SELECT *
        FROM sys_role
        WHERE id = #{id} AND state = 1
    </select>

    <select id="selectAll" resultType="SysRole">
        SELECT *
        FROM sys_role
        WHERE state = 1
    </select>

    <select id="selectCounts" resultType="int">
        SELECT count(*)
        FROM sys_role
        WHERE state = 1
    </select>

</mapper>